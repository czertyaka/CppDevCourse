\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{terminal}

\RequirePackage{minted}
\RequirePackage[minted]{tcolorbox}

\newcommand{\shellprompt}{>}
\newcommand{\shellcommand}[1]{\shellprompt \space \textbf{#1}}

\tcbset{
    terminalbase/.style={
        listing engine=minted,
        title=>\_\null\hfill x,
        minted language=text,
        listing only,
        left skip=0mm,
        right skip=0mm,
        left=0mm,
        right=0mm,
        top=0mm,
        bottom=0mm,
        boxrule=0.02cm,
        colback=white,
        colframe=black,
        colbacktitle=black
    },
    terminalpresentation/.style={
        terminalbase,
        minted options={
            fontsize=\tiny,
            breaklines,
            breakanywhere,
            escapeinside=!!
        },
        after skip=1mm,
        before skip=1mm,
        fonttitle=\ttfamily\tiny
    },
    terminalhomework/.style={
        terminalbase,
        minted options={
            fontsize=\small,
            breaklines,
            breakanywhere,
            escapeinside=!!,
            breaksymbolleft=
            }
        },
        after skip=3mm,
        before skip=3mm,
        fonttitle=\ttfamily\small
}

\newtcblisting{terminalwindow}[1]{#1}
