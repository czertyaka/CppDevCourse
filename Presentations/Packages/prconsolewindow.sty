\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{consolewindow}

\RequirePackage{minted}
\RequirePackage[minted]{tcolorbox}

\newcommand{\shellprompt}{>}
\newcommand{\shellcommand}[1]{\shellprompt \space \textbf{#1}}

\newtcblisting{consolewindow}[1][\tiny]{
    listing engine=minted,
    title=>\_\null\hfill x,
    minted options={
        fontsize=#1,
        breaklines,
        breakanywhere,
        escapeinside=||,
    },
    minted language=text,
    listing only,
    left skip=1mm,
    right skip=1mm,
    after skip=1mm,
    before skip=1mm,
    left=0mm,
    right=0mm,
    top=0mm,
    bottom=0mm,
    fonttitle=\ttfamily\tiny,
    boxrule=0.02cm,
    colback=white,
    colframe=black,
    colbacktitle=black,
}
